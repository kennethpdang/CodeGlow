{
    "manifest_version": 2,
    "name": "CodeGlow",
    "version": "1.0",
    "author": "Kenneth Dang",
    "description": "This is a Syntax Highlighter software that's good for study notes like Quizlet.",
    "icons": {
        "16": "/images/CodeGlow - 16.png",
        "48": "/images/CodeGlow - 48.png",
        "128": "/images/CodeGlow - 128.png"
    },
    "permissions": [
      "activeTab",
      "contextMenus",
      "tabs"
    ],
    "browser_action": {
      "default_icon": {
        "16": "/images/CodeGlow - 16.png",
        "48": "/images/CodeGlow - 48.png",
        "128": "/images/CodeGlow - 128.png"
      },
      "default_title": "CodeGlow",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "scripts": ["js/background.js", "js/options.js"],
      "persistent": true
    }
  }