{
  "manifest_version": 2,
  "name": "CodeGlow",
  "version": "1.0",
  "author": "Kenneth Dang",
  "description": "This is a Syntax Highlighter software that's good for study notes like Quizlet.",
  "icons": {
      "16": "/images/CodeGlow - Not Highlighted - 16.png",
      "48": "/images/CodeGlow - Not Highlighted - 48.png",
      "128": "/images/CodeGlow - Not Highlighted - 128.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "16": "/images/CodeGlow - Not Highlighted - 16.png",
      "48": "/images/CodeGlow - Not Highlighted - 48.png",
      "128": "/images/CodeGlow - Not Highlighted - 128.png"
    },
    "default_title": "CodeGlow"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "scripts": ["js/background_script/background.js", "js/background_script/options.js"],
    "persistent": true
  }
}